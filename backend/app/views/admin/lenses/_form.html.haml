= form_with(model: lens, url: lens.new_record? ? admin_lenses_path : admin_lens_path(lens), local: true, multipart: true) do |form|
  - if lens.errors.any?
    .alert.alert-danger
      %ul
        - lens.errors.full_messages.each do |message|
          %li= message
  .row.mb-3
    .col-md-3.col-form-label.fw-bold name
    .col-md-9= form.text_field :name, class: 'form-control'
  .row
    .col
      = form.submit '保存', class: 'btn btn-primary d-block w-100'
