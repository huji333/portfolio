= form_with(model: image, url: image.new_record? ? admin_images_path : admin_image_path(image), local: true, multipart: true, data: { controller: "exif-reader" }) do |form|
  - if image.errors.any?
    .alert.alert-danger
      %ul
        - image.errors.full_messages.each do |message|
          %li= message
  - unless image.file.attached?
    .row.mb-3
      .col-md-3.col-form-label.fw-bold Image
      .col-md-9= form.file_field :file, class: 'form-control', data: { exif_reader_target: "fileInput", action: "change->exif-reader#fileSelected" }
  .row.mb-3.justify-content-center
    .button-container
      = button_tag 'EXIFデータを反映', type: :button, data: { exif_reader_target: "exifButton", action: 'click->exif-reader#readExifData' }, class: 'btn btn-secondary', id: 'exifButton'
      %div{ data: { exif_reader_target: 'exifMessage' }, class: 'text-muted small mt-1' }
  .row.mb-3
    .col-md-3.col-form-label.fw-bold title
    .col-md-9= form.text_field :title, class: 'form-control', data: { exif_reader_target: "titleInput" }
  .row.mb-3
    .col-md-3.col-form-label.fw-bold caption
    .col-md-9= form.text_area :caption, class: 'form-control', data: { exif_reader_target: "captionInput" }
  .row.mb-3
    .col-md-3.col-form-label.fw-bold taken_at
    .col-md-9= form.datetime_field :taken_at, class: 'form-control', data: { exif_reader_target: "takenAtInput" }
  .row.mb-3
    .col-md-3
      = form.label :camera_id, 'カメラ', class: 'col-form-label fw-bold'
    .col-md-9= form.collection_select :camera_id, cameras, :id, :name, { include_blank: false }, class: 'form-control', data: { exif_reader_target: "cameraSelect" }
  .row.mb-3
    .col-md-3
      = form.label :lens_id, 'レンズ', class: 'col-form-label fw-bold'
    .col-md-9= form.collection_select :lens_id, lenses, :id, :name, { include_blank: false }, class: 'form-control', data: { exif_reader_target: "lensSelect" }
  - if image.new_record?
    .row.mb-3
      .col-md-3.col-form-label.fw-bold 表示位置
      .col-md-9= form.number_field :row_order_position, class: 'form-control'
  - else
    .row.mb-3
      .col-md-3.col-form-label.fw-bold 表示位置
      .col-md-9= image.row_order

  %h3 カテゴリ
  - categories.each do |category|
    .form-check
      = form.check_box :category_ids, { multiple: true, checked: image.categories.include?(category) }, category.id, nil
      = form.label :category_ids, category.name, class: "form-check-label"

  .row.mb-3
    .col-md-3.col-form-label.fw-bold is_published
    .col-md-9
      .form-check
        = form.check_box :is_published, class: 'form-check-input'
        = form.label :is_published, '公開する', class: 'form-check-label'
  .row
    .col
      = form.submit '保存', class: 'btn btn-primary d-block w-100'
